@model Microsoft.Store.PartnerCenter.Explorer.Models.NewDeploymentModel

@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">New Deployment</h4>
</div>
@using (Ajax.BeginForm("NewDeployment", "Manage", new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccessCallback", UpdateTargetId = "deployments" }))
{
    <fieldset>
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-xs-3 col-xs-offset-1">
                @Html.LabelFor(item => Model.TemplateUri)
            </div>
            <div class="col-xs-5">
                @Html.TextBoxFor(item => Model.TemplateUri, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                @Html.ValidationMessageFor(item => Model.TemplateUri)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3 col-xs-offset-1">
                @Html.LabelFor(item => Model.ParametersUri)
            </div>
            <div class="col-xs-5">
                @Html.TextBoxFor(item => Model.ParametersUri, new { @class = "form-control" })
            </div>
            <div class="col-xs-3">
                @Html.ValidationMessageFor(item => item.ParametersUri)
            </div>
        </div>
        <div>
            @Html.HiddenFor(item => item.CustomerId)
            @Html.HiddenFor(item => item.ResourceGroupName)
            @Html.HiddenFor(item => item.SubscriptionId)
        </div>
        <div class="row">
            <div class="col-xs-offset-1">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Deploy
                </button>
            </div>
        </div>
    </fieldset>
}

@Scripts.Render("~/bundles/jqueryval")